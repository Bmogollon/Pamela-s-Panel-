<style>
  #inst-t{
    margin-left:-3%;
  }
</style>
<h2>All Instructor</h2>
<table id="inst-t">
  <tr>
  <th>First Name</th>
  <th>Last Name</th>

  <th>Age</th>
    <th>Salary</th>
  <th>Education</th>
  <th>View Instructor</th>
    <th>Edit Instructor</th>
  <th>Delete Instructor</th>
  </tr>
<% @instructor.each do |instruct| %>
    <tr id="inst-<%= instruct.id %>">
      <td><%= instruct.first_name %></td>
      <td><%= instruct.last_name %></td>
      <td><%= instruct.age %></td>
        <td><%= instruct.salary %></td>
      <td><%= instruct.education %></td>
      <td><a href="/instructors/<%=instruct.id%>"><img src="/assets/professor.png"></a></td>
      <td><a href="/instructors/<%=instruct.id%>/edit"> <img src="/assets/pencil.png"> </a></td>
      <td> <%= link_to(image_tag("/assets/delete.png"),instructor_path(instruct.id), method: :delete, :remote => true )%></td>
        <td><%= image_tag(instruct.avatar) if instruct.avatar.attached?%></td>


      </tr>
      <% end %>
</table>
