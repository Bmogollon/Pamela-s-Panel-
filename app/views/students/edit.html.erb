<style>
  .st{
    display: block;
    margin:auto;
    border:black 1px dotted;
    box-shadow: rgba(0,0,0,0.5) 0px 3px 20px;
    background-image: linear-gradient(white, transparent, transparent);
    width: 500px;
      height: 350px;
      margin:0;
    position: relative;
    top:50%;
    left:55%;
    transform: translate(-50%, -50%);
  }
  .form{
    text-align:center;
 }
  label{
    font-size:18px;
  }
  h4{
  text-align:center;
  font-size:25px;
  }

</style>


<div class="st">


<h2>Edit Student</h2>
<div class="form">

<%= form_for @student do |f| %>
   <label>First Name</label><br>
   <%= f.text_field :first_name %><br>
   <label>Last Name</label><br>
   <%= f.text_field :last_name %><br>
   <label>Age</label><br>
   <%= f.number_field :age %><br>
   <label>Education</label><br>
   <%= f.select(:education, ['', 'High School', 'College', 'Masters', 'PHD']) %>
   <p><%= f.file_field :avatar, direct_upload: true %></p>

   <p>
   <%= f.submit "Save Changes" %>
   </p>
<% end %>
</div>
</div>
