<style>
  .edit-cors{
    display: block;
    margin:auto;
    border:black 1px dotted;
    box-shadow: rgba(0,0,0,0.5) 0px 3px 20px;
    background-image: linear-gradient(white, transparent, transparent);
    width: 500px;
      height: 350px;
      margin:0;
    position: relative;
    top:50%;
    left:55%;
    transform: translate(-50%, -50%);
  }
  .form{
    text-align:center;
 }
  label{
    font-size:18px;
  }
  h4{
  text-align:center;
  font-size:25px;
  }

</style>
<div class="edit-cors">

<h4>Edit course</h4>
<div class="form">

<%= form_for @course do |f| %>
<label>name</label><br>
 <%= f.text_field :name %><br>
 <label>hours</label><br>
 <%= f.text_field :hours %><br>

   <p>
   <%= f.submit "Save Changes" %>
   </p>
<% end %>

</div>
</div>
