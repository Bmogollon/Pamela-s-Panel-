<h1>Create Your cohort</h1>
<%= form_for @cohort do |f| %>
<label>name</label><br>
  <%= f.text_field :name %><br>

  <label>start date</label><br>
  <%= f.date_field :start_date %><br>
  <label>start date</label><br>
  <%= f.date_field :end_date %><br>

  <p><%= f.label :course_id, "Select course"%> <br>
      <%= f.select(:course_id, Course.all.collect{ |course| ["#{course.id}, #{course.name}"]
                                                  },{include_blank: true })%>
    </p>


  <p><%= f.label :instructor_id, "Select Instructor"%> <br>
    <%= f.select(:instructor_id, Instructor.all.collect{ |instructor| ["#{instructor.id}, #{instructor.last_name}, #{instructor.first_name}"]
                                                },{include_blank: true })%>
  </p>

  <p>
    <%= f.collection_check_boxes :student_ids, Student.all, :id, :first_name do |student| %>
    <%= student.check_box %>
    <%= student.label %>
    <%end%>
  </p>

<p>
<%= f.submit %>
</p>
<% end %>
