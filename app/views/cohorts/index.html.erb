<a href="/">Home</a>
<h2>All Cohorts</h2>
<table cellspacing="20">
  <tr>
  <th>Name</th>
  <th>Start Date</th>

  <th>End Date</th>
  <th>Intructors</th>
  <th>Courses</th>
  <th>Students</th>
</tr>

<% @cohort.each do |c| %>
    <tr id="cohrt"-<%c.id%>">
      <td><%= c.name %></td>
      <td><%= c.start_date%></td>
      <td><%= c.end_date %></td>
      <td><%= c.instructor.first_name %></td>
      <td><%= c.course.name %></td>
      <td><%c.student.each do |stud|%></td>
      <td><%=stud.first_name%></td>
      <%end%>
      <td><a href="/cohorts/<%=c.id%>"> View Cohort </a></td>
      <% if logged_in? %>
      <td><a href="/cohorts/<%=c.id%>/edit"> Edit cohort </a></td>
      <td> <%= link_to "delete cohort",cohort_path(c.id), method: :delete, :remote => true %><td>


      </tr>
    <% end %>
    <% end %>
</table>
