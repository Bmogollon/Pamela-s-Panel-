<style>
  .adm-grid{
    display: grid;
    columns-gap: 20px;
    grid-template-columns:300px 300px ;
    padding:10px;
  grid-column-gap: 10%;
      margin:0;
    position: relative;
    top:50%;
    left:60%;
    transform: translate(-50%, -50%);
    width: 70%;
    border: 1px dotted black;
    box-shadow: 0px 4px 0px black;
    text-align: center;
  }
  .adm-img img{
    float:left;
    height:300px;
    width:240px;
  }
  h2{
    text-align:right;
  }
  p{
    text-align:center;
    font-size:20px;
  }


</style>
<div class="adm-grid">
  <div class="adm-img">
    <%= image_tag(current_user.avatar) if current_user.avatar.attached?%>

  </div>
  <div class="adm-inf">

  <h3>Name: <%= @admin.name %></h3> <br>
  <h3>Email: <%= @admin.email %></h3><br>
  <div class="show">
    <%= link_to(image_tag("https://img.icons8.com/ios/50/000000/multi-edit.png"), edit_admin_path) %>
    <span class="show-edt">Edit Admin</span>

  </div>

</div>

</div>
